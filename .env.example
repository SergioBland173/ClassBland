# ===========================================
# ClassBland Environment Configuration
# ===========================================

# Database
DATABASE_URL="postgresql://classbland:classbland_secret@localhost:5432/classbland?schema=public"

# Auth
# Secret key for JWT tokens (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Invite code required for registration (beta access)
# Users must enter this code to create an account
INVITE_CODE="CLASSBLAND2024"

# Optional: Allowlist of emails that can register (comma-separated)
# Leave empty to only use INVITE_CODE
ALLOWED_EMAILS=""

# App
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Seed data (only used when running db:seed)
SEED_TEACHER_EMAIL="teacher@classbland.local"
SEED_TEACHER_PASSWORD="Teacher123!"
SEED_STUDENT_EMAIL="student@classbland.local"
SEED_STUDENT_PASSWORD="Student123!"


